<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "=//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eljamdev.service.mapper.MemberMapper">
	<select id="getMemberInfo" resultType="HashMap">
		select * from member
	</select>
	
	<select id="getMember" resultType="com.eljamdev.vo.User">
		select 
			id
			,password
			,name
			,email
			,phone
			,useyn
			,regdate
			,role
		from member where id = #{id} and useyn = 'Y'
	</select>
	
	
	<update id="insertMember">
		insert into member
		(id
			,password
			,name
			,email
			,phone
			,useyn
			,regdate
			,role)
		values
			(#{id}
			,#{password}
			,#{name}
			,#{email}
			,#{phone}
			,'Y'
			,NOW()
			,'ROLE_USER')
	</update>
</mapper>

